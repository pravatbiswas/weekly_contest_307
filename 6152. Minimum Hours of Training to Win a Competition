//need fix

class Solution {
public:
    int minNumberOfHours(int initialEnergy, int initialExperience, vector<int>& energy, vector<int>& experience) {
        //int expreq=0;
        int n=energy.size();
        int expreq=0;
        int exp=initialExperience;
        for(int i=0;i<n;i++){
            if(experience[i]>=exp){
                expreq+=1+experience[i]-exp;
                exp+=1+exp-experience[i];
            }
            exp+=experience[i];
        }
        int engreq=0;
        for(auto &i:energy) engreq+=i;
        engreq+=1;
        engreq-=initialEnergy;
        //count<<engreq<<" "<<expreq;
        return engreq+expreq;
    }
};

